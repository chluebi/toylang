
powerset(l, i) {
    if (i >= ?l) {
        return [[]];
    } else {
        without = powerset(l, i+1);
        with = [];

        j = 0;
        while (j < ?without) {
            with = with + (without[j] ++ []);
            j = j + 1;
        }

        j = 0;
        while (j < ?with) {
            with[j] = with[j] + l[i];
            j = j + 1;
        }

        return with ++ without;
    }
}

main() {
    a = [1, 2, 3];
    return powerset(a, 0);
}